				//Si c'est une ASM				
				if ($res['type']==3){				
					$reqAsm="SELECT CB,CHQ,VIR,ESP,CESU,permis,agrement,agrement_fin,date_format(agrement_fin, '%d-%m-%Y') AS agrement_fin_fr,id_logement FROM asm WHERE id_user='$resUser[id]'";
