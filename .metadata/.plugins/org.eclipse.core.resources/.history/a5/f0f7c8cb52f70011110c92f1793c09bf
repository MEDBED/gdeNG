<script type="text/javascript">
jQuery(function(){		
	$("#example_1").monthpicker(callback);	
});
function callback(data,$e){	
	var str = "";
	for(key in data) {		
		str += data[key]+'-';
	}
	str+='01';	
	jQuery('#message_example_1').val(str);
	/*var selector = "#message_" + $e.attr('id');
	$(selector).prepend("{" + str + "};<br />").show();*/
}
