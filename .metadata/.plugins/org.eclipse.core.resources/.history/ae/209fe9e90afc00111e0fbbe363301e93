function connectSQL(){
	$db=@mysql_connect($GLOBALS['params']['bdd']['db_host'],$GLOBALS['params']['bdd']['db_user'],$GLOBALS['params']['bdd']['db_pass']);
	@mysql_select_db($GLOBALS['params']['bdd']['db_name'],$db);	
	@mysql_query("SET NAMES 'utf8'");
	return $db;
}
