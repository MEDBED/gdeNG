<div id="container2">
	<h1><?php  echo $titre;?></h1>
		<h2><?php  echo $pageDescription;?></h2>	
		<div id="mess" style="display: none;"></div>
		<div id="help" title="Aide"><a href="#" onclick="return hs.htmlExpand(this, { contentId: 'highslide-html2<?php echo $page;?>',headingText: 'Aide',preserveContent: false } );"></a></div>
	<div class="content">
		<?php 		
		$nbEnfant=0;		
		$req="SELECT * FROM enfant a, contrat b WHERE b.id_asm=$_COOKIE[ID_UTILISATEUR] ORDER BY date_naissance;";	
		$rec=@mysql_query($req);				
		?>						
		<div id="majEnfant">	
		<table style="width: 100%" style="margin: 0;padding:0;" cellspacing=0 cellpadding=0><tr>
			<th class="barreTitre">Genre</th>							
			<th class="barreTitre">Prénom</th>
			<th width="10px" class="barreTitre">Nom</th>
			<th class="barreTitre">Né le </th>
			<th class="barreTitre">Fin de contrat</th>			
			<th colspan=3 width="48px">&nbsp;</th></tr>		
			<?php 			
			while ($res=@mysql_fetch_array($rec)){	
				if ($nbEnfant%2 == 0){
					$color='#f7f7f7';
				}else{$color='#c7c7c7';
				}								
				$idForCal=rawurlencode(chiffre("$res[id]", "$_COOKIE[UNIQID]"));
				$typeForCal=rawurlencode(chiffre("enfant", "$_COOKIE[UNIQID]"));			
				echo"<tr bgcolor=\"$color\" style=\"color: #000;cursor: pointer;\" onMouseOver=\"this.bgColor='#f4d99e'\" onMouseOut=\"this.bgColor='$color'\">";
				echo "<td>".$tabGenre[$res[genre]]."</td>";
				echo "<td>$res[prenom]</td>";
				echo "<td>$res[nom]</td>";
				echo "<td>$res[date_naissance]</td>";
				echo "<td>$res[date_fin_contrat]</td>";
				echo "<td></td>";
				echo "<td><img style=\"cursor: pointer;\" src=\"graphs/icons/agenda.png\" title=\"Agenda\" onclick=\"return hs.htmlExpand(this, { src: 'content/wdCalendar/wdCalendar/calendar.php?awq=$idForCal&zxs=$typeForCal',objectType: 'iframe', headingText: 'Agenda de $res[prenom] $res[nom]',width: 640,preserveContent: false });\"></td>";
				echo "<td><form method=\"post\" class=\"myFormDelete\" action=\"#\" style=\"display: inline\">";
				echo "<input type =\"hidden\" name=\"id\" value=\"$res[id]\">";
				echo "<input type=\"submit\" name=\"del\" value=\"\" style=\"background-image: url(graphs/icons/supp.png);
				background-repeat:no-repeat;
				background-color: transparent;border: none;
				cursor: pointer;\" title=\"Supprimer cet enfant\" onclick=\"
				return(confirm('Voulez-vous vraiment supprimer cet enfant ?'));
				\">&nbsp;&nbsp;&nbsp;";
				echo "</form></td>";
				echo "</tr>";
				$nbEnfant++;
			}
			?>
			</table>						
