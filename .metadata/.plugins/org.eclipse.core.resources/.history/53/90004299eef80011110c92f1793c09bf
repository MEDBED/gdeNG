jQuery(document).ready(function(){
	jQuery("input").focus(function() {
		jQuery("#mess").hide();
	});
	jQuery("input").focus(function() {
		jQuery("#mess2").hide();
	});
	
});
</script>
</head>
<body>
<div class="highslide-html-content" id="highslide-html2<?php echo $page;?>">
