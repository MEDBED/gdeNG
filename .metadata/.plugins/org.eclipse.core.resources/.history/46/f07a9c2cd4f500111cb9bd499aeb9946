<tr id="cal_<? echo $res['id'];?>"><td colspan=2>
	<?php 	
	$totalheuresMois=0;
	$totalrepasMois=0;
	$tabTemp=explode('@@',$res['cal_info']);
	//print_r($tabTemp);echo'<br/>';
	//unset($tabTemp[0]);
	$i=1;
	foreach ($tabTemp as $info){
		$info=explode('#',$info);
		$tabInfo[$i]=array("heures"=>$info[1],"repas"=>$info[2]);
		$i++;
	}		
	echo "<table align=\"center\" cellspacing=0 cellpadding=0>";		
	for($i=1; $i<=$NbJours; $i++) {
		if ($i==1 || $i==16){$L1="<tr><th style=\"border-right: solid 2px #fff;border-top: solid 2px #fff;\">Jour</th>";$L2="<tr><td style=\"border-right: solid 2px #fff;border-top: solid 2px #fff;\">Heures</td>";$L3="<tr><td style=\"border-right: solid 2px #fff;\">Repas</td>";}
		$L1.="<th style=\"width: 20px;text-align: center;border-bottom: solid 2px #fff;border-top: solid 2px #fff;\">$i</td>";		
		$DateJour = mktime(0, 0, 0, $Mois, $i, $Annee);
		$JourSemaine = date('D', $DateJour);
		if(!in_array(date("Y-m-d",$DateJour), $JoursFeries) && $JourSemaine != 'Sun' &&
				$JourSemaine != 'Sat' ) {			
			$L2.="<td style=\"width: 20px;text-align: center;\"><input name=\"heure_$i\" value=\"";
			if (empty($res['cal_info'])){
				$L2.=$nbHeureJour;$totalheuresMois+=$nbHeureJour;
			}else{$L2.=$tabInfo[$i]['heures'];$totalheuresMois+=$tabInfo[$i]['heures'];
			}
			$L2.="\" style=\"width: 25px;text-align: center;\"></th>";
			$L3.="<td style=\"width: 20px;text-align: center;\"><input type=\"checkbox\" name=\"repas_$i\" value=\"1\" style=\"width: 25px;text-align: center;\" ";
			if (empty($res['cal_info'])){
				$L3.="checked=\"checked";$totalrepasMois++;
			}else{
				if ($tabInfo[$i]['repas']==1){
					$L3.="checked=\"checked";
					$totalrepasMois++;
				}
			}
			$L3.="\"></td>";			
		}else{
			$L2.="<td style=\"width: 20px;text-align: center;\"><input name=\"heure_$i\" style=\"width: 25px;text-align: center;\"></th>";
			$L3.="<td style=\"width: 20px;text-align: center;\"><input type=\"checkbox\" name=\"repas_$i\" style=\"width: 25px;text-align: center;\"></td>";
