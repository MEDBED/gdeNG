				<table style=\"width: 100%;\">	
				";
				if ($res['id_parent1']==$_COOKIE['ID_UTILISATEUR']){
					if (!empty($res['id_parent1'])){
						$parent2=$res['id_parent2'];
					}
				}elseif($res['id_parent2']==$_COOKIE['ID_UTILISATEUR']){
					if (!empty($res['id_parent2'])){
						$parent2=$res['id_parent1'];
